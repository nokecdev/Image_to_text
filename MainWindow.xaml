<Window x:Name="window" x:Class="Image_to_text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_to_text"
        mc:Ignorable="d"
        Title="ImageToText" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <local:ItemType x:Key="ItemType" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"  
               Grid.Column="0"  
               Content="Source Language:" 
               VerticalAlignment="Bottom"  
               Margin="0,0,0,15"></Label>

        <ComboBox Grid.Row="0" 
              Grid.Column="1" 
              Width="50" 
              Height="20"
              HorizontalAlignment="Left" 
              VerticalAlignment="Bottom"
              ItemsSource="{Binding ItemType.TranslateFrom}"
              SelectedItem="{Binding ItemType.SelectedTranslateType, Mode=TwoWay}"
              DisplayMemberPath="Language" 
              Margin="0,0,0,15">
        </ComboBox>


        <Label Grid.Row="1" 
               Content="File path:" 
               Margin="0,0,0,15">
        </Label>

        <TextBox Grid.Row="1" 
                 Grid.Column="1" 
                 Width="Auto" 
                 Height="30" 
                 Margin="0,0,0,15"
                 BorderBrush="AliceBlue" 
                 BorderThickness="2"
                 Background="LightGray"
                 Text="{Binding SettingsManager.FileSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>

        <Button Grid.Column="2" 
        Grid.Row="1" 
        Name="btnOpenFile"  
        BorderBrush="AliceBlue" 
        BorderThickness="2"
        Margin="0,0,0,15"
        Click="BtnOpenFile_Click">
            Open file
        </Button>

        <Label Grid.Row="2" Grid.Column="0" Content="Export as:" />
        <ComboBox Grid.Row="2" 
                  Grid.Column="1"
                  Width="50" 
                  Height="20"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding ItemType.ItemTypes}"
                  SelectedItem="{Binding ItemType.SelectedItemType, Mode=TwoWay}"
                  BorderBrush="AliceBlue" BorderThickness="1"
                  DisplayMemberPath="Name">
        </ComboBox>

        <Label Grid.Row="3" 
               Grid.Column="0" 
               Content="Export path:"/>

        <Border 
            Grid.Row="3"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2"
            Background="AliceBlue"
            VerticalAlignment="Center"
            CornerRadius="5">

            <StackPanel Margin="5"
                        Width="Auto"
                    Orientation="Horizontal">

                <Image Source="C:\Users\Killakikitt\source\repos\Image_to_text_2025_update_project_description_for_github\assets\folder_icon.png" 
                   Height="18" />
                <TextBox 
                       Margin="3 0 0 0" 
                         Padding="2"
                         Width="165"
                         Text="{Binding SettingsManager.SavePath}">
                </TextBox>

            </StackPanel>


        </Border>



        <Button 
            Content="Convert" 
            Click="BtnConvert" 
            Grid.Row="4" 
            Grid.Column="2" 
            HorizontalAlignment="Right"
            Width="80"
            ></Button>
    </Grid>
</Window>